<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="196dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/ivcusine"
            android:layout_width="200dp"
            android:layout_height="212dp"
            android:layout_gravity="center"
            android:layout_marginTop="-20dp"
            android:padding="35dp"
            android:src="@drawable/italian">

        </ImageView>

        <LinearLayout
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvcusinename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="80dp"
                android:text="Italian"
                android:textColor="#426838"
                android:textSize="15sp"
                android:textStyle="bold"></TextView>

            <ImageButton
                android:id="@+id/ibnextarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="150dp"
                android:background="@android:color/transparent"
                android:contentDescription="Navigate to the next screen"
                android:src="@drawable/nextarrow1">

            </ImageButton>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>