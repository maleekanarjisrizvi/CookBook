<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addrecipe"
    android:background="@drawable/backg">

    <ImageButton
        android:id="@+id/ibbackarrow"
        android:layout_width="80dp"
        android:layout_height="68dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        android:contentDescription="Navigate to the next screen"
        android:src="@drawable/backarrow"></ImageButton>

    <TextView
        android:id="@+id/tvaddcusine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-200dp"
        android:layout_marginStart="25dp"
        android:fontFamily="sans-serif-medium"
        android:text="ADD CUSINE"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <EditText
        android:id="@+id/etentercategory"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginStart="-275dp"
        android:layout_marginTop="-80dp"
        android:hint="Enter Cusine"
        android:textColorHint="#426838"
        android:padding="10dp"
        android:textSize="20sp"
        android:background="@drawable/rounded_edittext_background">
    </EditText>

    <TextView
        android:id="@+id/uploadimage"
        android:layout_width="350dp"
        android:layout_height="132dp"
        android:layout_gravity="center"
        android:layout_marginStart="-351dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_edittext_background"
       android:text="Upload image"
        android:padding="10dp"
        android:textColorHint="#426838"
        android:textSize="20sp"></TextView>
    <ImageButton
        android:id="@+id/ibuploadimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/uploadimage"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginStart="-100dp"
        android:background="@android:color/transparent"
        android:contentDescription="Navigate to the next screen"
        ></ImageButton>

    <Button
        android:id="@+id/btnadd"
        android:layout_width="198dp"
        android:layout_height="55dp"
        android:layout_marginLeft="-240dp"
        android:layout_marginTop="550dp"
        android:backgroundTint="#8BC34A"
        android:text="ADD"
        android:textSize="25dp"
        android:textStyle="bold"></Button>







</LinearLayout>